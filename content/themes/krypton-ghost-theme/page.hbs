{{!< default}}
<header class="blog-header animated fadeIn" {{#if post.image}} style="background-image: url({{post.image}})" {{else}} {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}} {{/if}}>
    <div class="blog-section-overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1">
                  {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
                    <div class="blog-details">
                        <h1 class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
                        <h3 class="blog-description">{{@blog.description}}</h3>
                      {{> socials}}
                      {{> nav}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <div class="col-lg-12">
          {{#post}}
              <h1 class="page-title">{{{title}}}</h1>
          {{/post}}
        </div>
    </div>
</section>

<div class="container">
    <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      {{! Everything inside the #post tags pulls data from the post }}
      {{#post}}
          <article class="{{post_class}}">
              <section class="post-content">
                {{content}}
              </section>
          </article>
      </div>
      {{/post}}
    </div>
</div>
